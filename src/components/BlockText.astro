---
import { Markdown } from 'astro/components';
import ButtonPrimary from './atoms/ButtonPrimary.astro';
const { title, content } = Astro.props;
---
<main id="main" class="block-text container">

    <div>

        <h1>{title}</h1>

        <Markdown content={content} />

        <p>
            
            <ButtonPrimary url="mailto:contact@bhen.be" label="Parlons de votre projet" /> 
            
            <a href="#je-suis-designer-web" class="more-info">ou d√©couvrez-en plus sur moi...</a>

        </p>

    </div>

</main>

<style>
.block-text{
    margin-top: 3rem;
    margin-bottom: 3rem;
}

.more-info{
    display: block;
    padding: 1rem;
    line-height: 1.1;
    text-align: center;
    color: hsl(53, 9%, 17%);
    text-decoration: none;
}

@media(min-width: 44rem){
    .block-text{
        min-height: 100vh;
        display: flex;
        flex-flow: column wrap;
        justify-content: center;
    }

    .more-info{
        display: inline-block;
    }
}
</style>