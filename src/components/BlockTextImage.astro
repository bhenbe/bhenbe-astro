---
import { Markdown } from 'astro/components';
const { title, content, image } = Astro.props;
---
<section class="max-w-6xl mx-auto my-32">

    <h2 class="text-5xl font-bold mb-12">{title}</h2>

    <div class="flex flex-1">

        <img src={image} alt="" class="w-auto max-w-md" />

        <Markdown content={content} />

    </div>

</section>