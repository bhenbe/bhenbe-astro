---
import { Markdown } from 'astro/components';
const { title, slug, content, image } = Astro.props;
---
<section id={slug} class="block-text-image container">

    <div>

        <figure>

            <img src={image.url} width={image.width} height={image.height}  alt="" />

        </figure>

        <div class="block-text-image__content">

            <h2>{title}</h2>

            <Markdown content={content} />

        </div>

    </div>

</section>

<style>
.block-text-image > div{
    display: flex;
    flex-flow: column wrap;
}

.block-text-image figure{
    display: none;
}

.block-text-image img{
    max-height: 20rem;
}

.block-text-image__content p{
    font-size: 1.125rem;
    margin-bottom: 2rem;
    line-height: 1.5;
}

@media(min-width: 44rem){
    .block-text-image figure{
        display: flex;
        flex-flow: row nowrap;
        justify-content: center;
    }

    .block-text-image > div{
        flex-flow: row wrap;
    }

    .block-text-image > div > *{
        width: 50%;
    }
}
</style>