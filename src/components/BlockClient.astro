---
import { Markdown } from 'astro/components';
const { title, content } = Astro.props;
---
<section class="max-w-6xl mx-auto my-32 md:my-64 p-12 rounded bg-gray-50">

    <h2 class="lg:text-4xl md:text-3xl text-2xl font-bold mb-12 text-center">{title}</h2>

    <div class="list-column">

        <Markdown content={content} />

    </div>

</section>